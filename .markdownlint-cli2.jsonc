{
  // Scrapsウィキプロジェクト用のmarkdownlint設定
  "config": {
    // デフォルトですべてのルールを有効化
    "default": true,

    // 行の長さ制限を無効化（日本語コンテンツは長くなりがち）
    "MD013": false,

    // #の後のスペースチェックを無効化（Scrapsのウィキリンク記法 #[[タグ]] で使用）
    "MD018": false,

    // インラインHTMLを許可（YouTube埋め込み等で使用）
    "MD033": false
  },

  // 対象ファイルのglob指定
  "globs": [
    "scraps/**/*.md",
    "*.md"
  ],

  // 無視するファイル・ディレクトリ
  "ignores": [
    "public/**",
    "node_modules/**"
  ]
}
